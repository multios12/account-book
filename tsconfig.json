{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "sourceMap": true,
    "target": "es2015",
  },
  "exclude": [
    "src/public/*.ts",
    "src/public/components/*.vue",
  ],
  "include": [
    "src/**/*"
  ],
}